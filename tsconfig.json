{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "declaration": true,
        "declarationDir": "./dist/types",
        "module": "esnext",
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "noEmit": true,
        "outDir": "./dist",
        "jsx": "react",
        "target": "ES2016",
        "sourceMap": true,
        "moduleResolution": "node",
        "lib": [
            "DOM",
            "ES6",
            "DOM.Iterable",
            "ScriptHost"
        ],
        "resolveJsonModule": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "./tests/",
        "./node_modules/",
        "./dist/"
    ],
}